root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
continuation_indent_size = 4
max_line_length = 120
ktlint_standard_trailing-comma-on-call-site = disabled
ktlint_standard_class-signature = disabled
